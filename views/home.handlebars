    <!-- Change Image based on Mood -->
    <script>
    var moodString; 
    var avgMood = {{userData.0.mood}};
      if(avgMood == 5){
      document.getElementById("moodImage").style = 'background: url("images/dog_happy.png") no-repeat center';
      moodString = "Happy";}
      else if(avgMood == 4){
      document.getElementById("moodImage").style = 'background: url("images/dog_satisfied.png") no-repeat center';
      moodString = "Satisfied";}
      else if(avgMood == 3){
      document.getElementById("moodImage").style = 'background: url("images/dog_apathetic.png") no-repeat center';
      moodString = "Apathetic";}
      else if(avgMood == 2){
      document.getElementById("moodImage").style = 'background: url("images/dog_sad.png") no-repeat center';
      moodString = "Sad";}
      else{
      document.getElementById("moodImage").style = 'background: url("images/dog_disgusted.png") no-repeat center';
      moodString = "Disgusted";}
      document.getElementById("dogStatus").innerHTML = "MOOD: " + moodString + " |  COINS: " + {{userData.0.coins}};
    </script>


